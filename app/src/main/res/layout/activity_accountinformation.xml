<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/apptheme_bg">

        <ImageButton
            android:id="@+id/image_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="账户信息"
            android:textColor="@color/white"
            android:textSize="18sp" />
            />
        <TextView
            android:id="@+id/accountinfo_resetting_tv"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="修改"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            />

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="账户信息"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:background="@color/white"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号:"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:textColor="@color/gray"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/accountinfo_phone_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="40dp"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:hint="请绑定手机号"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:inputType="phone"
            android:textColorHint="@color/gray"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名:"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textColor="@color/gray"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/accountinfo_nickname_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@color/white"
            android:hint="用户名"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textColorHint="@color/gray"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="个人资料"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="真实姓名:"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textColor="@color/gray"
            android:textSize="14sp"
            />

        <EditText
            android:id="@+id/accountinfo_username_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@color/white"
            android:hint="请输入姓名"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证号:"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textColor="@color/gray"
            android:textSize="14sp"
            />

        <EditText
            android:id="@+id/accountinfo_idcard_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@color/white"
            android:hint="请输入身份证号"
            android:textSize="14sp"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            />
    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="银行名称:"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    />

                <EditText
                    android:id="@+id/accountinfo_bankname_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:background="@color/white"
                    android:hint="请输入银行名称"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开户地点:"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    />

                <EditText
                    android:id="@+id/accountinfo_bankplace_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:background="@color/white"
                    android:hint="请输入开户地点"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开户支行:"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    />

                <EditText
                    android:id="@+id/accountinfo_branchbankname_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:background="@color/white"
                    android:hint="请输入支行名称"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="银行卡号:"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    />

                <EditText
                    android:id="@+id/accountinfo_banknum_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:background="@color/white"
                    android:hint="请输入银行卡号"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验证码:"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    />

                <EditText
                    android:id="@+id/accountinfo_phonecode_et"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="75dp"
                    android:layout_centerVertical="true"
                    android:hint="请输入手机验证码"
                    android:paddingLeft="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:background="@drawable/gary_border"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/accountinfo_smscode_tv"
                    android:textColorHint="@color/gray"
                    android:inputType="number"

                    />
                <TextView
                    android:id="@+id/accountinfo_smscode_tv"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:text="获取验证码"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/setting_logout_btn_bg"

                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                >
                <Button
                    android:id="@+id/accountinfo_submit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/setting_logout_btn_bg"
                    android:text="提 交"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/accountinfo_intro_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="温馨提示:"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:textColor="#63553b"
                android:textSize="13sp"
                />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
